package com.example.musicapp;

import java.util.Vector;

public class Album {

    private int id;
    private String name;
    private int songCount;
    private Vector<Song> songs;
    private String artist;

    public Album(String n, String a, int i, int sc, Vector<Song> s)
    {
        id = i;
        name = n;
        artist = a;
        songCount = sc;
        songs = s;
    }

    public Album(String n, String a, int i, int sc)
    {
        id = i;
        name = n;
        artist = a;
        songCount = sc;
        songs = new Vector<Song>();
    }

    public Album()
    {
        id = 0;
        name = "none";
        artist = "none";
        songCount = 0;
        songs = new Vector<Song>();
    }

    public int getID()
    {
        return id;
    }

    public String getName()
    {
        return name;
    }

    public int songAmt()
    {
        return songCount;
    }

    public Vector<Song> getSongs()
    {
        return songs;
    }

    public String toString()
    {
        return ("null");
    }
}
